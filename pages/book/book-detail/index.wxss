/* pages/book/book-detail/index.wxss */
.container {
  background-color: #f5f5f5;
}

.head {
  background-color: #fff;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.head .author {
  font-size: 28rpx;
  color: #999;
}

.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}

.sub-container .headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.comments-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.comments-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

/* .comments-container v-tag:nth-child(1) > view{
  background-color: #fffbdd;
} */

/* .comments-container v-tag:nth-child(2) > view{
  background-color: #eefbff;
} */

.ex-tag1 {
  background-color: #fffbdd !important;
}

.ex-tag2 {
  background-color: #eefbff !important;
}

.comments-container .num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

.content {
  text-indent: 1em;
  font-weight: 500;
}

.detail-container {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-container .vertical {
  display: flex;
  flex-direction: column;
}

.description {
    color: #999;
    margin-right: 30rpx;
}

.post-container {
  height: 100rpx;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.post-fake {
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.posting-container {
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 500rpx;
  z-index: 999;
}
