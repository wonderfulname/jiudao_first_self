<!--pages/book/book-detail/index.wxml-->
<wxs src="../../../utils/filter.wxs" module="filter" />
<view class='container'>
  <view class='head'>
    <image src='{{bookDetail.image}}'></image>
    <text class='title'>{{bookDetail.title}}</text>
    <text class='author'>{{bookDetail.author}}</text>
  </view>
  <!-- 短评 -->
  <view class='sub-container'>
    <text class='headline'>短评</text>
    <view class='comments-container'>
      <block wx:for="{{comments}}" wx:key="content">
        <v-tag my-tag="{{index ===0 ? 'ex-tag1' : (index === 1 ? 'ex-tag2' : '')}}" text="{{item.content}}">
          <text slot="after" class='num'>+{{item.nums}}</text>
        </v-tag>
      </block>
    </view>
  </view>
  <!-- 内容简介  -->
  <view class='sub-container'>
    <text class='headline'>内容简介</text>
    <view class='content'>{{filter.format(bookDetail.summary)}}</view>
  </view>
</view>
