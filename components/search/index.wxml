<!--components/search/index.wxml-->
<view class='container'>
  <view class='header'>
    <view class='search-container'>
      <image class='icon' src='images/search.png'></image>
      <input bindconfirm='onConfirm' auto-focus='true' placeholder-class='in-bar' class='bar' placeholder='书籍名'></input>
      <image class='cancel-img' src='images/cancel.png'></image>
    </view>
    <view bindtap='onCancel' class='cancel'>取消</view>
  </view>
  <view>
    <!-- 历史搜索 -->
    <view class='history'>
      <view class='title'>
        <view class='chunk'></view>
        <text>历史搜索</text>
      </view>
      <view>
        <block wx:for="{{historyKeywordList}}" wx:key="item">
          <v-tag text="{{item}}"></v-tag>
        </block>
      </view>
    </view>
    <!-- 热门搜索 -->
    <view class='history hot-search'>
      <view class='title'>
        <view class='chunk'></view>
        <text>热门搜索</text>
      </view>
    </view>
  </view>
</view>
